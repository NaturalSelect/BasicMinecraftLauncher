<mui:ModernWindow x:Class="MC启动基础.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="基础启动器" IsTitleVisible="True"
        LogoData=""          
        ContentSource="/Pages/Home/Index.xaml" ResizeMode="CanMinimize">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="欢迎使用">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="主页" Source="/Pages/Home.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="导航" GroupKey="settings">
            <mui:LinkGroup.Links>
            <mui:Link DisplayName="主页" Source="/Pages/Home/Index.xaml"></mui:Link>
            <mui:Link DisplayName="设置" Source="/Pages/SettingsPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
    
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="主页" Source="/Pages/Home/Index.xaml"></mui:Link>
        <mui:Link DisplayName="设置" Source="/Pages/SettingsPage.xaml" />
        <mui:Link DisplayName="SKNIME" Source="http://www.skinme.cc/"></mui:Link>
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
